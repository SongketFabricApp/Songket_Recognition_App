<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">


        <ImageView
            android:id="@+id/iv_item_songket_picture"
            android:layout_width="122dp"
            android:layout_height="144dp"
            android:layout_margin="0dp"
            android:contentDescription="@string/image_songket"
            android:src="@color/black"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="1.0"
            tools:src="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/tv_item_songket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="@color/primary"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/iv_item_songket_picture"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.102"
            tools:text="Songket Bulan Bintang" />

        <TextView
            android:id="@+id/tv_item_desc"
            android:layout_width="259dp"
            android:layout_height="67dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_light"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_item_origin"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/tv_item_origin"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_item_origin"
            card_view:layout_constraintVertical_bias="1.0"
            tools:text="lorem ipsum dolor sit amet" />

        <TextView
            android:id="@+id/tv_item_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/province"
            android:textColor="@color/primary"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_item_songket"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/tv_item_songket"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_item_songket" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>